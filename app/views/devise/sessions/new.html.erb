<section class="login-block">
  <div class="container">
	  <div class="row">
      <p><%= render 'layouts/error_messages', object: resource %></p>
		  <div class="col-md-4 login-sec">
		    <h2 class="text-center">Se connecter</h2>
        <div class="form-group">
        <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-social btn-facebook" do %>
        <i class="fa fa-facebook"></i>Se connecter via Facebook
        <% end %>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.text_field :login, autofocus: true, placeholder: "Pseudo ou email", class: "form-control"%>
        </div>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe", class: "form-control" %>
        </div>
        <div class="form-check">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Se souvenir de moi" %>
          <% end -%>
        </div>
        <div class="form-group">
          <%= f.submit "Se connecter", class: "btn btn-primary" %>
        </div>
        <% end %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %><br />
        <% end -%>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Me renvoyer le lien d'activation", new_confirmation_path(resource_name) %><br />
        <% end -%>
        Pas encore inscrit ? <%= link_to "Créer un compte", new_user_registration_path %>
      </div>
		  <%= render 'layouts/carrousel' %>
    </div>
  </div>
</section>
