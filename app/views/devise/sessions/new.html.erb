<section class="login-block">
  <div class="container">
	  <div class="row">
		  <div class="col-md-4 login-sec">
		    <h2 class="text-center">Se connecter</h2>
        <div class="form-group">
        <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-social btn-facebook" do %>
        <i class="fa fa-facebook"></i>Se connecter via Facebook
        <% end %>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.text_field :login, autofocus: true, placeholder: "Pseudo ou email", class: "form-control"%>
        </div>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe", class: "form-control" %>
        </div>
        <div class="form-check">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Se souvenir de moi" %>
          <% end -%>
        </div>
        <div class="form-group">
          <%= f.submit "Se connecter", class: "btn btn-primary" %>
        </div>
        <% end %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %><br />
        <% end -%>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Me renvoyer le lien d'activation", new_confirmation_path(resource_name) %><br />
        <% end -%>
        Pas encore inscrit ? <%= link_to "Créer un compte", new_user_registration_path %>
      </div>
		  <div class="col-md-8 banner-sec">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <%= image_tag "carrousel-1.jpg", class: "d-block img-fluid", alt: "First slide"%>
              <div class="carousel-caption d-none d-md-block">
                <div class="banner-text">
                  <h2>Découvre</h2>
                  <p>les spots parfaits tout autour de toi !</p>
                </div>
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag "carrousel-2.jpg", class: "d-block img-fluid", alt: "First slide"%>
              <div class="carousel-caption d-none d-md-block">
                <div class="banner-text">
                  <h2>Rencontre</h2>
                  <p>des milliers de voyageurs autour de toi !</p>
                </div>
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag "carrousel-3.jpg", class: "d-block img-fluid", alt: "First slide"%>
              <div class="carousel-caption d-none d-md-block">
                <div class="banner-text">
                  <h2>Profite</h2>
                  <p>des bons plans de la communauté partout où tu es !</p>
                </div>
              </div>
            </div>
          </div>
		    </div>
	    </div>
    </div>
  </div>
</section>
