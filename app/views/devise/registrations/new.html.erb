<section class="login-block">
  <div class="container">
    <div class="row">
		  <div class="col-md-4 sign_up-sec login-sec">
		    <h2 class="text-center">Créer un compte</h2>
        <div class="form-group">
          <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-social btn-facebook" do %>
          <i class="fa fa-facebook"></i>Se connecter via Facebook
          <% end %>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.text_field :username, autofocus: true, placeholder: "Pseudo", class: "form-control"%>
        </div>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
          <%= f.email_field :email, placeholder: "Email", class: "form-control"%>
        </div>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-address-book"></i></span>
          <%= f.text_field :firstname, placeholder: "Prénom", class: "form-control"%>
        </div>

          <em>(6 caractères minimum)</em><br />
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mot de passe", class: "form-control" %>
        </div>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation du mot de passe", class: "form-control" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Se souvenir de moi" %>
          </div>
        <% end -%>
        <div class="form-group">
          <%= f.submit "Créer un compte", class: "btn btn-primary" %>
        <% end %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %><br />
        <% end -%>
        </div>
        <%= render 'layouts/carrousel' %>
      </div>
    </div>
  </section>
