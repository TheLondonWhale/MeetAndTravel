<section class="login-block">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <p><%= devise_error_messages! %></p>
		  <div class="col-md-8 sign_up-sec login-sec">
		    <h2 class="text-center">Mot de passe oublié ?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="input-group form-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Entre ici ton email" %>
        </div>
        <div class="form-group d-flex justify-content-center">
          <%= f.submit "Réinitialiser mon mot de passe", class: "btn btn-primary" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
