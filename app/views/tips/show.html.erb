    <!--============================= BOOKING =============================-->
<div class="container">
  <div class="row">
    <div class="col-md-6 responsive-wrap">
      <h5><%= @tip.title %></h5>
      <hr>
      <p class="booking-checkbox"><%= @tip.description %></p>
      <hr>
      <div class="row d-flex justify-content-between">
        <div class="col-md-3 responsive-wrap">
          <% @tip.categories.each do |name| %>
          <%= name.name %>
          <% end %>
        </div>
        <div class="col-md-3 responsive-wrap">
          <% pre_like = @tip.likes.find { |like| like.user_id == current_user.id} %>
          <% if pre_like %>
            <%= link_to tip_like_path(@tip, pre_like), method: :delete, class: "delete" do %>
              <i id="unlike" class="fa fa-heart"></i>
            <%end%>
          <% else %>
            <%= link_to tip_likes_path(@tip), method: :post do %>
              <i id="like" class="fa fa-heart-o"></i>
            <% end %>
          <% end %>
          <%= @tip.likes.count %> <%= (@tip.likes.count) == 1 ? 'like' : 'likes'%>
        </div>
      </div>
    </div>
    <div class="col-md-6 responsive-wrap">
      <%= image_tag "feat_slide1.jpg", class: "image_tips img-fluid" %>
    </div>
  </div>
</div>

