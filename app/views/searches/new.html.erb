<section class="login-block">
  <div class="container">
    <div class="row d-flex justify-content-center">
		  <div class="col-md-8 sign_up-sec login-sec">
		    <h2 class="text-center">Rechercher un bon plan</h2>
        <%=form_for @search do |f| %>
          <div class="form-group">
            <%= f.label :keywords, "Mots-clés" %>
            <%= f.text_field :keywords, class: "form-control", placeholder: "centre-ville Bangkok" %>
          </div>
          <div class="form-group">
            <%= f.label :category_id, "Catégories" %><br>
            <%= f.collection_check_boxes(:category_id, Category.all, :id, :name) do |b| %>
            <%= b.label class: "label-checkbox" do %>
            <%= b.check_box + " " + b.text %>
            <% end %>
            <% end %>
          </div>
          <div class="form-group d-flex justify-content-center">
            <%= f.submit "Rechercher", class: "btn btn-primary" %>
          </div>
          <%end%>
      </div>
    </div>
  </div>
</section>
