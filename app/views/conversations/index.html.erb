<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="titile-block title-block_subpage">
            <h2>Boîte de réception</h2>
        </div>
    </div>
</div>

<main role="main" class="container bootdey.com">
  <div class="d-flex align-items-center p-3 my-3 bg-blue rounded box-shadow">
    <img class="mr-3" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" width="48" height="48">
    <div>
      <h6 class="mb-0 lh-100"><%= current_user.username %></h6>
      <small>Messages</small>
    </div>
  </div>

  <div class="my-3 p-3 bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">Messages reçus</h6>

      <% @conversations.each do |conversation| %>
      <% if @messages %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
         <% if conversation.sender_id == current_user.id %>
           <% recipient = User.find(conversation.recipient_id) %>
         <% else %>
           <% recipient = User.find(conversation.sender_id) %>
         <% end %>
        <div class="media text-muted pt-3">
          <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="" class="mr-2 rounded" width="32" height="32">
          <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark"><%= recipient.username %></strong>
            <%= link_to conversation.messages.last.body, conversation_messages_path(conversation)%>
        <% end %>
      <% end %>
    <% end %>
      </p>
    </div>
  </div>
